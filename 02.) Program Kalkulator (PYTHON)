
print("======================================================")
print("\t\t KALKULATOR SEDERHANA PYTHON \t\t")
print("======================================================")
print("1. Penjumlahan (+)")
print("2. Pengurangan (-)")
print("3. Pembagian   (/)")
print("4. Perkalian   (x)")
print("5. Exit")
print("======================================================")

angka_1=int(input("Masukkan bilangan pertama : "))
angka_2=int(input("Masukkan bilangan kedua   : "))
pilihan = int(input("masukkan pilihan untuk operator matematika : "))

#RUMUS opsi pilihan operator matematika
penjumlahan = angka_1 + angka_2
pengurangan = angka_1 - angka_2
pembagian = angka_1 / angka_2
perkalian = angka_1 * angka_2

#fungsi IF(Jika)
if pilihan == 1:
    print('Hasilnya adalah : ' + str(penjumlahan))   
elif pilihan == 2:
    print('Hasilnya adalah : ' + str(pengurangan))
elif pilihan == 3:
    print ('Hasilnya adalah : ' + str(pembagian))
elif pilihan == 4 :
    print (' Hasilnya adalah : ' +str(perkalian))
else :
    print('Pilihan tidak sesuai')
